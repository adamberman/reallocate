<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= item.escape('name') %></h4>
      </div>
      <div class="modal-body item-content">
        <p><%= item.escape('description') %></p>
        <p><%= item.escape('hours') %></p>
        <div id="transaction-edit" class="hidden-container">
          <form class="new-transaction">
            <label for="transaction-hours">
              Think it'll take more or less than the listed number of hours? Make your revision here:
            </label>
            <input 
              type="number"
              id="transaction-hours"
              name="transaction[hours]"
              value="<%= item.escape('hours') %>">
              <button
                type="button"
                id="submit-transaction"
                class="btn btn-primary">
                Submit
              </button>
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <div id="transaction-buttons">
          <% if (acceptable) { %>
            <button
              type="button"
              id="accept-transaction-button"
              class="btn btn-primary">
              Accept
            </button>
          <% } %>
          <button
            type="button"
            id="edit-transaction-button"
            class="btn btn-primary">
            Edit/Respond
          </button>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->

