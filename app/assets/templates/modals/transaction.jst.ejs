<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= item.escape('name') %></h4>
      </div>
      <div class="modal-body item-content">
      <p><%= item.escape('description') %></p>
      <p><%= item.escape('hours') %></p>
      </div>
      <div class="modal-footer">
        <form class="new-transaction">
          <!-- <textarea
            id='new-transaction-info'
            class='form-control'
            name='transaction[content]'
            placeholder='Submit an offer or request!'></textarea> -->
          <div id="transaction-edit" class="hidden-container">
            <label for="transaction-hours">
              Think it'll take more or less than the listed number of hours? Make your revision here:
            </label>
            <input 
              type="number"
              id="transaction-hours"
              name="transaction[hours]"
              value="<%= item.escape('hours') %>">
          </div>
          <button 
            type="button" 
            id="submit-transaction" 
            class="btn btn-primary">
            Submit
          </button>
        </form>
        <div id="transaction-buttons">
          <button
            type="button"
            id="accept-transaction-button"
            class="btn btn-primary hidden-container">
            Accept
          </button>
          <button
            type="button"
            id="edit-transaction-button"
            class="btn btn-primary">
            Edit/Respond
          </button>
        </div>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->

