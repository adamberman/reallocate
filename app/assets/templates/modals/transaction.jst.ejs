<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= item.escape('name') %></h4>
      </div>
      <div class="modal-body item-content">
      <p><%= item.escape('description') %></p>
      </div>
      <div class="modal-footer">
        <form class="new-transaction">
          <textarea
            id='new-transaction-info'
            class='form-control'
            name='transaction[content]'
            placeholder='Submit an offer or request!'></textarea>
        </form>
        <button type="button" id="submit-transaction" class="btn btn-primary">Submit</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->

