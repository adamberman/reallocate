<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title"><%= request.escape('name') %></h4>
      </div>
      <div class="modal-body item-content">
        <% request.bids().forEach(function (bid) { %>
          <% if (bid.get('writer') === 'User') { %>
            <p>Me:
          <% } else { %>
            <p><%= request.attributes.requestable.name %>
          <% } %>  
          <%= bid.escape('content') %></p>
        <% }) %>
      </div>
      <div class="modal-footer">
        <textarea
          id='new-bid-info'
          class='form-control'
          name='bid[content]'
          placeholder='Make a bid or reply'></textarea>
        <button type="button" class="btn btn-primary">Submit</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->

