<div class="offer-content">
	<div class="offer-content-header hidden-container">
		<button 
			class="btn btn-primary transaction"
			id="new-transaction">
			Create Request
		</button>
	</div>
	<div class="offer-content-main">
		<h4>
			Offer Title: <%= item.escape('name') %>
		</h4>
		<p>
			Offer Description: <%= item.escape('description') %>
		</p>
		<p>
			Estimated Number of Hours: <%= item.escape('hours') %>
		</p>
		<p>
			Available Until: <%= item.escape('date') %>
		</p>
		<p>
			Offerer: <%= offerable.name %>
		</p>
	</div>
	<div class="offer-content-expander hidden-container">
		<p>Tags: <%= tags %></p>
		<p>Scope Information</p>
		<p>Comments</p>
	</div>
</div>
<div class="modals"></div>