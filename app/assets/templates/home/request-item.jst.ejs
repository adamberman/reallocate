<div class="request-content">
	<div class="request-content-header hidden-container">
		<button 
			class="btn btn-primary">
			Submit Bid
		</button>
	</div>
	<div class="request-content-main">
		<h4>
			Request Title: <%= item.escape('name') %>
		</h4>
		<p>
			Request Description: <%= item.escape('description') %>
		</p>
		<p>
			Requester: <%= requestable.name %>
		</p>
	</div>
	<div class="request-content-expander hidden-container">
		<p>About Me Information</p>
		<p>Scope Information</p>
		<p>Bids</p>
	</div>
</div>